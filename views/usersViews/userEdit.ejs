<!DOCTYPE html>
<html lang="en">
  <%-include("../partials/head")%>

  <body>
    <%-include("../partials/header")%>

    <main class="mainRegister">
      <!-- Main Register -->
      <form
        class="formBoxR"
        enctype="multipart/form-data"
        action="/users/edit?_method=PUT"
        method="post"
      >
        <div class="registerBox">
          <input
            class="loginBox-1"
            type="text"
            name="id"
            id="id"
            placeholder="id"
            value="<%= userEdit.id %> "
            hidden
          />
          <input
            class="loginBox-1"
            type="text"
            name="name"
            id="name"
            placeholder="Nombre Usuario"
            value="<%= userEdit.name %> "
          />
          <input
            class="loginBox-1"
            type="text"
            name="lastName"
            id="lastName"
            placeholder="Apellido Usuario"
            value="<%= userEdit.lastName %> "
          />
          <input
            class="loginBox-1"
            type="email"
            name="email"
            id="email"
            placeholder="Email"
            value="<%= userEdit.email %> "
          />
          <!-- COMO PASAR ESTA INFORMACION DE FECHA ?????? -->
          <label class="titleRegister" for="birht">Fecha de Nacimiento</label>
          <input
            class="loginBox-1"
            type="date"
            name="birht"
            id="birht"
            value="<%= Number(userEdit.birht) %> "
          />
          <input
            class="loginBox-1"
            type="text"
            name="adress"
            id="adress"
            placeholder="Domicilio"
            value="<%= userEdit.adress %> "
          />
        </div>
        <div class="radioBox">
          <div class="titleRegister">
            <h3>Perfil del Usuario</h3>
          </div>
          <!-- Validacion y envio de checked como atributo -->

          <input class="loginBox-2" type="radio" name="userTipe" id="comprador"
          value="comprador" <%if(userEdit.userTipe==="comprador"){%>checked<%}%>
          />

          <p class="option">Comprador</p>
          <input class="loginBox-2" type="radio" name="userTipe" id="vendedor"
          value="vendedor" <%if(userEdit.userTipe==="vendedor"){%>checked<%}%>
          />
          <p class="option">Vendedor</p>
        </div>
        <div class="checkBx">
          <div class="titleRegister">
            <h3>Intereses</h3>
          </div>
          <!-- Validacion y envio de checked como atributo -->
          <div class="checkBx-1">
            <input class="loginBox-3" type="checkbox" name="interest"
            id="interest" value="electro"
            <%if(userEdit.interest.includes("electro")){%>checked<%}%> />
            <p class="option">Electro</p>
          </div>
          <div class="checkBx-1">
            <input class="loginBox-3" type="checkbox" name="interest"
            id="interest" value="moda"
            <%if(userEdit.interest.includes("moda")){%>checked<%}%> />
            <p class="option">Moda</p>
          </div>
          <div class="checkBx-1">
            <input class="loginBox-3" type="checkbox" name="interest"
            id="interest" value="hogar"
            <%if(userEdit.interest.includes("hogar")){%>checked<%}%> />
            <p class="option">Hogar</p>
          </div>
          <div class="checkBx-1">
            <input class="loginBox-3" type="checkbox" name="interest"
            id="interest" value="jugeteria"
            <%if(userEdit.interest.includes("jugeteria")){%>checked<%}%> />
            <p class="option">Jugeteria</p>
          </div>
          <div class="checkBx-1">
            <input class="loginBox-3" type="checkbox" name="interest"
            id="interest" value="vidaSana"
            <%if(userEdit.interest.includes("vidaSana")){%>checked<%} %> />
            <p class="option">Vida Sana</p>
          </div>
        </div>
        <div class="titleRegister">
          <h3>Foto Usuario</h3>
        </div>
        <!-- COMO PASAR ESTA INFORMACION DE IMAGEN ?????? -->
        <div class="photoBox">
          <input
            class="loginBox-1"
            type="file"
            name="photo"
            id="foto"
            value="<%= userEdit.photo %> "
          />
        </div>
        <div class="passBox">
          <input
            class="loginBox-1"
            type="password"
            name="password1"
            id="password"
            placeholder="Contraseña Actual"
            minlength="8"
          />
          <input
            class="loginBox-1"
            type="password"
            name="password2"
            id="password"
            placeholder="Contraseña Nueva"
            minlength="8"
          />
          <button class="loginButton" type="submit">Enviar</button>
          <button class="resetButton" type="reset">
            Volver a Informacion Original
          </button>
        </div>
      </form>
    </main>

    <%-include("../partials/footer")%>
  </body>
</html>
